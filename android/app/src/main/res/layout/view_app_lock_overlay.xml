<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_lock_overlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_lock_overlay"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/bg_app_lock_card">

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dojo_logo"
                    android:contentDescription="Dojo icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/app_lock_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4dp"
                android:text="Your training is not complete."
                android:textAlignment="center"
                android:textColor="#1F2030"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_lock_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Return to StudySensei and finish your Study Session to unlock this path."
                android:textAlignment="center"
                android:textColor="#6D6E83"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_back_to_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_app_lock_button"
                android:elevation="0dp"
                android:paddingVertical="14dp"
                android:text="Return to StudySensei"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
